<%- include('../partials/header'); %>
<form action="/restaurants/<%= _id %>/rate" method="post">

  <div class="form-group">
    Rate (1 - 10): <output id="scoreOutput">5</output><br>
  </div>

  <div class="form-group">
    <input type="range" class="form-control-range" name="score" id="scoreInput" value="5" min="1" max="10" oninput="scoreOutput.value = scoreInput.value">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  
</form>
<%- include('../partials/footer'); %>